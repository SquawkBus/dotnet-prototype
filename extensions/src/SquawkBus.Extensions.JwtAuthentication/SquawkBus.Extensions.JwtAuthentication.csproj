<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ProduceReferenceAssembly>True</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>SquawkBus.Extensions.JwtAuthentication</PackageId>
    <Version>1.0.0-alpha1</Version>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <Authors>Rob Blackbourn</Authors>
    <Company>SquawkBus</Company>
    <RepositoryUrl>https://github.com/squawkbus/squawkbus</RepositoryUrl>
    <Description>JWT Authentication for SquawkBus.</Description>
    <PackageTags>MessageBus, Network, Publish, Subscribe, pubsub</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.IdentityModel.Tokens" Version="6.15.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.15.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../src/SquawkBus.Authentication/SquawkBus.Authentication.csproj" />
    <ProjectReference Include="../../../src/SquawkBus.Messages/SquawkBus.Messages.csproj" />
  </ItemGroup>

</Project>
